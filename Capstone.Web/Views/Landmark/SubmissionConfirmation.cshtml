@model Capstone.Web.Models.LandmarkModel
@{
    ViewBag.Title = "SubmissionConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="well well-sm">
    <h2 class="pagetitle">Submission Confirmation</h2>

    @if (Model.SubmissionSuccessful)
    {
        <h3 class="outline">Thank you for submitting @Model.Name!</h3>
    }
    else
    {
        <h3 class="outline">@Model.Name has already been submitted.</h3>
    }
    @Html.Hidden("RedirectTo", Url.Action("LandmarkList", "Landmark"));
</div>
<script>
    redirect();
</script>